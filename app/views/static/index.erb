<body>
  <div id="wrapper">

<div style="text-align: center">
	<img id="logo" src="img/backrub.jpg" alt="Backrub">
</div>
<p>Futuristically known as Google.</p>


<div id="url-form">
	<form action="/urls" method="POST">
		<input type= "text" name= "long_url" placeholder = "Please enter"> 
	<br/>
	<br/>
		<input type="submit" value= "Submit" class="btn">
<!-- 		<input id="lucky" type="I'm feeling lucky" value= "submit"> -->
	
	</form>
</div>
<br/>

<table class="zebra">
<thead> 
<tr id="zebra-header"> 
	<th>No.</th> 
    <th>Url</th> 
    <th>Short Url</th> 
    <th>Click Count</th> 
</tr> 
</thead> 
<tbody> 
	<% @urls.each_with_index do |url,count| %>
		<tr> 
		    <td><%= count + 1%></td> 
		    <td><%= url.long_url %></td> 
		    <td><a href=<%= url.short_url %>><%= url.short_url %><a> </td>
			<td><%= url.click_counter %></td>
		</tr> 
	<% end %>
</tbody> 
</table> 
